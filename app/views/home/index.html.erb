<header class="jumbotron" id="meme-text">
 	<p>Welcome to the virtual the Meme Equity Market/Ecommerce ! </p>
</header>

<div class="container">

	<div class="row">
		<div class="col-lg-12">
			<h2>Top Daily Memes:</h2>
		</div>
	</div>
	<div class="row text-right">
		<div class="col-lg-12">
			<%= link_to 'View all memes', meme_index_path %>
		</div>
	</div>
	<div class="row" id="top-memes">
		<% @memes.each do |m| %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail  frontpage-meme rounded">
				<%= link_to image_tag(m.img, class:'top-meme'), m%>
				<div class="caption">
					<%= m.name %>
					Points: <%= ((s = m.score) && s > 0) ? '+'+s.to_s : s  %>
					<%= m.previous_price ? (((tmp = m.price_difference(m.previous_price.price)) && tmp >= 0) ? '+'+tmp.to_s : '-'+tmp.to_s ) : 'n/a'%>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>
